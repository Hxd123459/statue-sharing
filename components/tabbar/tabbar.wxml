<!--components/tabbar/tabbar.wxml-->
<view class="tabbar-container safe-area-bottom">
  <view class="tabbar">
    <!-- 背景滑块 -->
    <view class="slider" style="transform: translateX({{current * 340}}rpx);"></view>
    
    <!-- Tab项 -->
    <view 
      class="tab-item {{current === 0 ? 'active' : ''}}"
      bindtap="onTabClick"
      data-index="0"
    >
      <text class="icon">📊</text>
      <text class="label">排行</text>
    </view>
    
    <view 
      class="tab-item {{current === 1 ? 'active' : ''}}"
      bindtap="onTabClick"
      data-index="1"
    >
      <text class="icon">📝</text>
      <text class="label">记录</text>
    </view>
  </view>
</view>
