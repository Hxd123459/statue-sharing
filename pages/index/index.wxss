/* pages/index/index.wxss */

.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-primary);
  transition: background-color 0.3s ease;
}

/* 头部区域 */
.header {
  padding: 24rpx 32rpx;
  text-align: center;
  background-color: var(--bg-primary);
}

.header .title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.header .subtitle {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 滚动区域 */
.scroll-area {
  flex: 1;
  overflow-y: auto;
}

/* 前3名 Podium 样式 */
.podium-container {
  padding: 32rpx 24rpx;
  margin: 0 24rpx 32rpx;
  background-color: var(--bg-card);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.podium {
  display: flex;
  align-items: flex-end;
  justify-content: center;
  gap: 40rpx;
  min-height: 400rpx;
}

.podium-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  flex: 1;
}

/* 第1名 */
.podium-item.rank-1 {
  margin-bottom: 60rpx;
}

.podium-item .crown {
  font-size: 48rpx;
  margin-bottom: -12rpx;
  animation: float 2s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

/* 排名徽章 */
.rank-badge {
  position: absolute;
  top: -12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  z-index: 2;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.rank-badge.gold {
  background: linear-gradient(135deg, var(--gold-gradient-start), var(--gold-gradient-end));
}

.rank-badge.silver {
  background: linear-gradient(135deg, var(--silver-gradient-start), var(--silver-gradient-end));
}

.rank-badge.bronze {
  background: linear-gradient(135deg, var(--bronze-gradient-start), var(--bronze-gradient-end));
}

/* 头像容器 */
.avatar-container {
  margin: 24rpx 0;
  transition: transform 0.2s ease;
}

.avatar-container:active {
  transform: scale(0.95);
}

.avatar-border {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  background-color: var(--bg-card);
}

.avatar-container.champion .avatar-border {
  width: 160rpx;
  height: 160rpx;
  border-width: 6rpx;
}

.gold-gradient {
  border-color: var(--gold-gradient-start);
  background: linear-gradient(135deg, var(--gold-gradient-start) 0%, var(--gold-gradient-end) 100%);
}

.silver-gradient {
  border-color: var(--silver-gradient-start);
  background: linear-gradient(135deg, var(--silver-gradient-start) 0%, var(--silver-gradient-end) 100%);
}

.bronze-gradient {
  border-color: var(--bronze-gradient-start);
  background: linear-gradient(135deg, var(--bronze-gradient-start) 0%, var(--bronze-gradient-end) 100%);
}

.emoji {
  font-size: 64rpx;
}

.emoji.large {
  font-size: 72rpx;
}

/* 状态名称和人数 */
.podium-item .status-name {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-top: 12rpx;
  font-weight: 500;
}

.podium-item .status-count {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

.podium-item .status-count.large {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--accent-color);
}

/* 列表区域 */
.status-list {
  padding: 0 24rpx 24rpx;
}

.status-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  margin-bottom: 16rpx;
  padding: 0 32rpx;
  background-color: var(--bg-card);
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
}

.status-card:active {
  transform: scale(0.98);
}

.status-card.mine {
  background: linear-gradient(135deg, var(--accent-color), #7c3aed);
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.3);
}

.status-card.mine .card-left .rank-number,
.status-card.mine .card-left .name,
.status-card.mine .card-right .count {
  color: white !important;
}

.card-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.rank-number {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: var(--bg-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-secondary);
}

.card-left .emoji {
  font-size: 64rpx;
}

.card-left .name {
  font-size: 32rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.card-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.card-right .count {
  font-size: 32rpx;
  color: var(--text-secondary);
}

.active-tag {
  padding: 8rpx 16rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  font-size: 24rpx;
  color: white;
  backdrop-filter: blur(8rpx);
}

/* 底部安全距离 */
.bottom-safe-area {
  height: 200rpx;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9999;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: white;
}
