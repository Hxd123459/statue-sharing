/* pages/records/records.wxss */

.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-primary);
  transition: background-color 0.3s ease;
}

/* 头部区域 */
.header {
  padding: 24rpx 32rpx;
  background-color: var(--bg-primary);
}

.header .title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.header .subtitle {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 滚动区域 */
.scroll-area {
  flex: 1;
  overflow-y: auto;
}

/* 记录容器 */
.records-container {
  padding: 0 24rpx;
}

/* 日期分组 */
.date-group {
  margin-bottom: 32rpx;
}

.date-label {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 8rpx;
  margin-bottom: 16rpx;
}

.date-text {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-secondary);
}

.date-count {
  font-size: 24rpx;
  color: var(--text-secondary);
  opacity: 0.6;
}

/* 记录列表 */
.record-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 记录卡片 */
.record-card {
  background-color: var(--bg-card);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
}

.record-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.08);
}

.record-main {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 记录头部 */
.record-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.record-header .emoji {
  font-size: 48rpx;
}

.record-header .status-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

/* 时间信息 */
.record-time {
  padding-left: 60rpx;
}

.time-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 持续时长 */
.record-duration {
  padding-left: 60rpx;
}

.duration-text {
  font-size: 24rpx;
  color: var(--text-secondary);
  opacity: 0.5;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
  min-height: 60vh;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-primary);
  font-weight: 500;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  gap: 16rpx;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--divider-color);
  border-top-color: var(--accent-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.load-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 没有更多 */
.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.no-more-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  opacity: 0.5;
}

/* 底部安全距离 */
.bottom-safe-area {
  height: 200rpx;
}

/* 加载状态遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9999;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: white;
}

/* 骨架屏（可选） */
.skeleton-card {
  background-color: var(--bg-card);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 12rpx;
}

.skeleton-line {
  height: 32rpx;
  background: linear-gradient(
    90deg,
    var(--divider-color) 25%,
    var(--bg-primary) 50%,
    var(--divider-color) 75%
  );
  background-size: 200% 100%;
  animation: loading 1.5s ease-in-out infinite;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}

.skeleton-line:last-child {
  width: 60%;
}

@keyframes loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}
