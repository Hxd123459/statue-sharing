/* app.wxss - 全局样式 */

/* 白天主题 */
page.light {
  --bg-primary: #F5F7FA;
  --bg-card: #FFFFFF;
  --text-primary: #1A1A1A;
  --text-secondary: #8E8E93;
  --accent-color: #6366F1;
  --divider-color: #E5E5EA;
  --gold-gradient-start: #FFD700;
  --gold-gradient-end: #FFA500;
  --silver-gradient-start: #C0C0C0;
  --silver-gradient-end: #A8A8A8;
  --bronze-gradient-start: #CD7F32;
  --bronze-gradient-end: #B8722C;
}

/* 黑夜主题 */
page.dark {
  --bg-primary: #1C1C1E;
  --bg-card: #2C2C2E;
  --text-primary: #FFFFFF;
  --text-secondary: #AEAEB2;
  --accent-color: #8B5CF6;
  --divider-color: #38383A;
  --gold-gradient-start: #FFD700;
  --gold-gradient-end: #FFA500;
  --silver-gradient-start: #D1D1D6;
  --silver-gradient-end: #C0C0C0;
  --bronze-gradient-start: #E8A87C;
  --bronze-gradient-end: #CD7F32;
}

/* 全局重置 */
page {
  background-color: var(--bg-primary);
  color: var(--text-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  transition: background-color 0.3s ease, color 0.3s ease;
}

/* 通用工具类 */
.container {
  width: 100%;
  height: 100vh;
  background-color: var(--bg-primary);
}

.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
